@model SistemaLudico.ViewModels.MainStudent.CursosStudentViewModel
@{
    ViewBag.Title = "Cursos";
}


<div class="row">
    <div class="col-lg-12">
        @*<h1 style="text-align:center">Curso de matemática</h1>*@
    </div>
    <div class="row col-lg-12" style="margin-top:100px">
        <div class="col-lg-4">
            <img src="~/Content/assets/img/fig5.PNG" style="display: block;margin-left: auto;margin-right: auto;width:250px;height:450px" />
        </div>
        <div class="col-lg-8">
            <input type="text" id="simpleinput" placeholder="BUSCAR MATERIAL DE CURSO" style="margin-bottom:20px">
            <h4 for="simpleinput" style="font-weight: bold;margin-bottom:20px;">CURSOS</h4>
            @foreach (var item in Model.LstCurso)
            {
                <div class="row">
                    <div class="col-lg-1">
                        <img src="~/Content/assets/img/fig6.PNG" style="display: block;margin-left: auto;margin-right: auto;" />
                    </div>
                    <div class="col-lg-7">
                        <a class="button small col-lg-12" style="background-color:blue; color:white" href="@Url.Action("Temas", "MainStudent", new { CursoId = item.CursoId})">@item.Nombre</a>
                    </div>
                    <div class="col-lg-4">
                        <div class="row">
                            <div class="col-lg-4">
                                <input type="image" src="~/Content/assets/img/fig12.jpg" width="40px" height="40px" />
                            </div>
                            <div class="col-lg-4">
                                <input type="image" src="~/Content/assets/img/fig13.jpg" width="40px" height="40px" />
                            </div>
                            <div class="col-lg-4">
                                <input type="image" src="~/Content/assets/img/fig14.jpg" width="40px" height="40px" />
                            </div>
                        </div>
                    </div>
                </div>
                <br />
            }

            <a class="col-lg-2 button small" style="background-color:red; color:white">SALIR</a>
        </div>
    </div>
</div>

