@model SistemaLudico.ViewModels.MainStudent.LevelViewModel
@{
    ViewBag.Title = "Level";
}

<style>
    .center {
        display: block;
        margin-left: auto;
        margin-right: auto;
        width: 50%;
    }
    body, html {
        height: 100%;
        margin: 0;
    }

    .fondo {
        height: 100%;
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
    }

    .centervertical {
        margin: 0;
        position: absolute;
        top: 30%;
        -ms-transform: translateY(-30%);
        transform: translateY(-30%);
    }
</style>

<div class="fondo" style="background-image: url('@Url.Content("../../Content/assets/img/fig16.jpg")');">
    <div class="row">
        <div class="col-lg-4" style="margin-top:30%">
            <img src="@Url.Content("~/Content/assets/img/gift/7.gif")" class="center" width="310" height="310"/>
            <a class="col-lg-12 button small" style="background-color:forestgreen;  color:white;font-size: 20px;font-weight: bold;" data-send href="@Url.Action("Games","Geometri", new { TemaId = Model.TemaId, LevelBIA = "BAS" })">BASICO</a>
        </div>
        <div class="col-lg-4" style="margin-top:30%">
            <img src="@Url.Content("~/Content/assets/img/gift/3.gif")" class="center" width="310" height="310"/>
            <a class="col-lg-12 button small" style="background-color:darkorange;  color:white;font-size: 20px;font-weight: bold;" data-send href="@Url.Action("Games","Geometri", new { TemaId = Model.TemaId, LevelBIA = "INT"})">INTERMEDIO</a>
        </div>
        <div class="col-lg-4" style="margin-top:30%">
            <img src="@Url.Content("~/Content/assets/img/gift/8.gif")" class="center" width="310" height="310"/>
            <a class="col-lg-12 button small" style="background-color:red; color:white;font-size: 20px;font-weight: bold;" data-send href="@Url.Action("Games","Geometri", new { TemaId = Model.TemaId, LevelBIA = "AVA" })">AVANZADO</a>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-1" style="margin-top:20%">
        </div>
        <div class="col-lg-2" style="margin-top:22%">
            <a class="col-lg-12 button small" style="background-color:red;  color:white;font-size: 20px;font-weight: bold;" data-send href="@Url.Action("TemaStart","MainStudent", new { TemaId = Model.TemaId })">ATRAS</a>
        </div>
    </div>
</div>



