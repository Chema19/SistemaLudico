                            </div>
                        </div>
                        <div class="post-option">
                            <div id="div2" ondrop="drop(event)" ondragover="allowDrop(event)" data-stile style="border-radius: 12px;">
                                <img id="2" src="@Url.Content("~/Content/assets/img/dos.png")" width="70" height="70" draggable="true" ondragstart="drag(event)" />
                            </div>
                        </div>
                        <div class="post-option">
                            <div id="div3" ondrop="drop(event)" ondragover="allowDrop(event)" data-stile style="border-radius: 12px;">
                                <img id="3" src="@Url.Content("~/Content/assets/img/tres.png")" width="70" height="70" draggable="true" ondragstart="drag(event)" />
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="post-options">
                        <div class="post-option">
                            <div id="div4" ondrop="drop(event)" ondragover="allowDrop(event)" data-stile style="border-radius: 12px;">
                                <img id="4" src="@Url.Content("~/Content/assets/img/cuatro.png")" width="70" height="70" draggable="true" ondragstart="drag(event)" />
                            </div>
                        </div>
                        <div class="post-option">
                            <div id="div5" ondrop="drop(event)" ondragover="allowDrop(event)" data-stile style="border-radius: 12px;">
