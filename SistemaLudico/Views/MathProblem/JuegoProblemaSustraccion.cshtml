                    <br />
                    <div class="post-options">
                        <div class="post-option">
                            <div id="div1">
                            </div>
                        </div>
                        <div class="post-option">
                            <div id="div0" ondrop="drop(event)" ondragover="allowDrop(event)" data-stile style="border-radius: 12px;">
                                <img id="0" src="@Url.Content("~/Content/assets/img/cero.png")" width="70" height="70" draggable="true" ondragstart="drag(event)" />
                            </div>
                        </div>
                        <div class="post-option">
                            <div id="div1">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br />
        <br />
        <div class="grid grid-3-9 centered" style="margin-top:5px !important">
            <div class="grid-column">
            </div>
            <div class="grid-column widget-box" style="margin-right:15px;padding-top: 15px;padding-bottom: 15px;">
                <div class="post-options">
                    <div class="post-option">
                        <div id="value1">
                            <div id="val1reto" ondrop="drop(event)" ondragover="allowDrop(event)" data-stile style="border-radius: 12px;">
                            </div>
                        </div>
                    </div>
                    <div class="post-option">
                        <img src="@Url.Content("~/Content/assets/img/sumar.PNG")" width="70" height="60" />
                    </div>
                    <div class="post-option">
                        <div id="value2">
                            <div id="val2reto" ondrop="drop(event)" ondragover="allowDrop(event)" data-stile style="border-radius: 12px;">
                            </div>
                        </div>
                    </div>
                    <div class="post-option">
                        <img src="@Url.Content("~/Content/assets/img/igual.PNG")" width="70" height="60" />
                    </div>
                    <div class="post-option">
                        <div id="response">
                            <div id="respreto" ondrop="drop(event)" ondragover="allowDrop(event)" data-stile style="border-radius: 12px;">
                            </div>
                        </div>
                    </div>
                    <div class="post-option">
                        <a class="btn" style="background-color:orange;  color:white" data-validate>
                            Verificar Respuesta
                        </a>
                        <a class="btn" style="background-color:green;  color:white" hidden="hidden" data-next>
                            Resultado
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




@section scripts{
    <script>
            var vida = 3;
            $('[data-validate]').on('click', function () {
                var val1 = $('#val1reto')[0].children[0].id;
                var val2 = $('#val2reto')[0].children[0].id;
                var resp = $('#respreto')[0].children[0].id;
                var ejercicioId = @Model.Ejercicio.EjercicioId

                    $.ajax({
                        url: '@Url.Action("CalculateProblemaSustraccion", "MathProblem")',
                        type: 'GET',
                        data: { Val1: val1, Val2: val2, Resp: resp, EjercicioId: ejercicioId },
                        success: function (data) {
                            debugger;
                            if (data.value === "false") {
                                vida = vida - 1;

                                var vidas = '';
                                for (var i = 0; i < vida; i++) {
                                    vidas = vidas + '<div class="post-option"> <img src="@Url.Content("~/Content/assets/img/corazon.png")" width="70" height="70" /> </div>';
                                }
                                for (var i = vida; i < 4; i++) {
                                    vidas = vidas + ' <div class="post-option"></div>';
                                }
                                $('[data-vidas]').empty();
                                $('[data-vidas]').append(vidas);
                            } else {
                                $("[data-next]").removeAttr("hidden");
                                $("[data-validate]").prop("hidden", "hidden");
                            }
                        }
                    });
            });

            $('[data-next]').on('click', function () {
                window.location.href = "http://localhost:53995/MathProblem/Result?EjercicioId=" + @Model.Ejercicio.EjercicioId + "&Vidas=" + vida;
            });

        function allowDrop(ev) {
            ev.preventDefault();
        }

        function drag(ev) {
            ev.dataTransfer.setData("text", ev.target.id);
        }

        function drop(ev) {
            ev.preventDefault();
            var data = ev.dataTransfer.getData("text");
            ev.target.appendChild(document.getElementById(data));
        }
    </script>
}
