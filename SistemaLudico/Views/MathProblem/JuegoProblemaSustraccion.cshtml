                            </div>
                        </div>
                        <div class="post-option">
                            <div id="div8" ondrop="drop(event)" ondragover="allowDrop(event)" data-stile style="border-radius: 12px;">
                                <img id="8" src="@Url.Content("~/Content/assets/img/ocho.png")" width="70" height="70" draggable="true" ondragstart="drag(event)" />
                            </div>
                        </div>
                        <div class="post-option">
                            <div id="div9" ondrop="drop(event)" ondragover="allowDrop(event)" data-stile style="border-radius: 12px;">
                                <img id="9" src="@Url.Content("~/Content/assets/img/nueve.png")" width="70" height="70" draggable="true" ondragstart="drag(event)" />
                            </div>
