@model SistemaLudico.ViewModels.MainStudent.ResultViewModel
@{
    ViewBag.Title = "Result";
}

<style>
    .center {
        display: block;
        margin-left: auto;
        margin-right: auto;
        width: 50%;
    }

    .row {
        display: flow-root !important;
    }

    [data-stile] {
        width: 70px;
        height: 70px;
        padding: 10px;
        border: 1px solid #aaaaaa;
    }

    .post-options {
        background-color: transparent !important;
        border-top: none !important;
    }

    .post-option:hover {
        background-color: transparent !important;
    }
    body, html {
        height: 100%;
        margin: 0;
    }

    .fondo {
        height: 100%;
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
    }

    .centervertical {
        margin: 0;
        position: relative;
        top: 30%;
        -ms-transform: translateY(-30%);
        transform: translateY(-30%);
    }
</style>

<div class="fondo" style="background-image: url('@Url.Content("../../Content/assets/img/Fondos/Fondo_Avatar.png")');">


    <div data-reto class="centervertical">
        <br />
        <br />
        <div class="grid grid-4-4-4 centered">
            <div class="grid-column">
                <h1 style="text-align:center; color:black"> Resultado del Juego </h1>
            </div>
        </div>
        <br />
        <div class="grid grid-half change-on-desktop centered">
            <div class="grid-column center">
                <img src="@Url.Content("~/Content/assets/img/fig4.PNG")" width="385" height="385" />
            </div>
            <div class="grid-column card" style="opacity:0.8;padding-top:40px;padding-bottom:40px">
                @foreach (var item in Model.ListDetailNota)
                {
                    <h1 style="text-align:center; color:black">
                        @item.Item1 : @item.Item2 puntos
                    </h1>
                }
                <hr />
                <h1 style="text-align:center; color:black;font-size: 60px;font-weight: bold;"> @Model.MensajeFinal</h1>
            </div>


        </div>
        <br />
        <br />
        <div class="grid grid-4-4-4 centered">
            <div class="grid-column">
                <a class="btn" style="background-color:orange;  color:black;font-size: 20px;font-weight: bold;" href="@Url.Action("Games", "Numeration", new { TemaId = Model.Ejercicio.TemaId, LevelBIA = Model.Ejercicio.LevelBIA})">
                    SALIR
                </a>
            </div>
        </div>
    </div>
</div>