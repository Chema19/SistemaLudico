@model SistemaLudico.ViewModels.MainAdmin.LoginRegisterViewModel
@{
    ViewBag.Title = "Login";
    Layout = null;
}




<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Log In | UBold - Responsive Admin Dashboard Template</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="A fully featured admin theme which can be used to build CRM, CMS, etc." name="description" />
    <meta content="Coderthemes" name="author" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <!-- App favicon -->
    <link rel="shortcut icon" href="https://coderthemes.com/ubold/layouts/assets/images/favicon.ico">

    <link href="@Url.Content("~/Content/assetsAdmin/css/bootstrap.min.css")" rel="stylesheet" type="text/css" id="bs-default-stylesheet" />
    <link href="@Url.Content("~/Content/assetsAdmin/css/app.min.css")" rel="stylesheet" type="text/css" id="app-default-stylesheet" />
    <link href="@Url.Content("~/Content/assetsAdmin/css/bootstrap-dark.min.css")" rel="stylesheet" type="text/css" id="bs-dark-stylesheet" disabled />
    <link href="@Url.Content("~/Content/assetsAdmin/css/app-dark.min.css")" rel="stylesheet" type="text/css" id="app-dark-stylesheet" disabled />
    <link href="@Url.Content("~/Content/assetsAdmin/css/icons.min.css")" rel="stylesheet" type="text/css" />

</head>

<body class="authentication-bg authentication-bg-pattern">

    <div class="account-pages mt-5 mb-5">
        <div class="container">
            @MessageHelpers.ShowMessages(TempData)
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6 col-xl-5">
                    <div class="card bg-pattern">

                        <div class="card-body p-4">

                            <div class="text-center w-75 m-auto">
                                <div class="auth-logo">
                                    <h2 data-label-login @(Model.Created == false ? "hidden" : "")> Iniciar Sesión</h2>
                                    <h2 data-label-register @(Model.Created == false ? "" : "hidden")> Registrar</h2>
                                    <h2>
                                        Sistema Lúdico
                                    </h2>
                                </div>
                            </div>
                            <br />
                            <form action="@Url.Action("Login","MainAdmin")" method="post" data-login @(Model.Created == false ? "hidden" : "")>
                                <div class="form-group mb-3">
                                    <label for="emailaddress">Nombre de usuario</label>
                                    @Html.TextBoxFor(x => x.UsuarioLogIn, new { @class = "form-control", placeholder = "Ingrese su cuenta de usuario" })
                                </div>
                                <div class="form-group mb-3">
                                    <label for="password">Contraseña</label>
                                    @Html.PasswordFor(x => x.ContraseniaLogIn, new { @class = "form-control", placeholder = "Ingrese su contraseña" })

                                </div>
                                <div class="form-group mb-0 text-center">
                                    <button class="btn btn-primary btn-block" type="submit"> Ingresar </button>
                                </div>
                            </form>

                            <form action="@Url.Action("Register","MainAdmin")" method="post" data-register @(Model.Created == false ? "" : "hidden")>
                                <div class="form-group mb-3">
                                    <label for="emailaddress">Nombres</label>
                                    @Html.TextBoxFor(x => x.Nombre, new { @class = "form-control", placeholder = "Ingrese su(s) nombres" })
                                </div>
                                <div class="form-group mb-3">
                                    <label for="password">Apellidos</label>
                                    @Html.TextBoxFor(x => x.Apellido, new { @class = "form-control", placeholder = "Ingrese sus apellidos" })

                                </div>
                                <div class="form-group mb-3">
                                    <label for="emailaddress">Nombre de usuario</label>
                                    @Html.TextBoxFor(x => x.Usuario, new { @class = "form-control", placeholder = "Ingrese su cuenta de usuario" })
                                </div>
                                <div class="form-group mb-3">
                                    <label for="password">Contraseña</label>
                                    @Html.TextBoxFor(x => x.Contrasenia, new { @class = "form-control", placeholder = "Ingrese su contraseña" })

                                </div>
                                <div class="form-group mb-0 text-center">
                                    <button class="btn btn-primary btn-block" type="submit"> Registrar </button>
                                </div>
                            </form>
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-12 text-center">
                            <p data-go-register @(Model.Created == false ? "hidden" : "") class="text-white-50">No tienes una cuenta? <a class="text-white ml-1"><b>Registrate</b></a></p>
                            <p data-go-login @(Model.Created == false ? "" : "hidden") class="text-white-50">Ya tengo una cuenta <a class="text-white ml-1"><b>Iniciar sesión</b></a></p>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>


    <footer class="footer footer-alt">
        2020 -
        <script>document.write(new Date().getFullYear())</script> &copy; Sistema Lúdico <a href="#" class="text-white-50"></a>
    </footer>
    <script src="@Url.Content("~/Scripts/jquery-3.3.1.js")"></script>
    <script src="@Url.Content("~/Content/assetsAdmin/js/vendor.min.js")"></script>
    <script src="@Url.Content("~/Content/assetsAdmin/js/app.min.js")"></script>

    <script>
        $('[data-go-register]').on('click', function () {
            $('[data-register]').removeAttr('hidden', 'hidden');
            $('[data-login]').prop('hidden', 'hidden');
            $('[data-go-login]').removeAttr('hidden', 'hidden');
            $('[data-go-register]').prop('hidden', 'hidden');
            $('[data-label-login]').prop('hidden', 'hidden');
            $('[data-label-register]').removeAttr('hidden', 'hidden');
        });
        $('[data-go-login]').on('click', function () {
            $('[data-login]').removeAttr('hidden', 'hidden');
            $('[data-register]').prop('hidden', 'hidden');
            $('[data-go-register]').removeAttr('hidden', 'hidden');
            $('[data-go-login]').prop('hidden', 'hidden');
            $('[data-label-login]').removeAttr('hidden', 'hidden');
            $('[data-label-register]').prop('hidden', 'hidden');
        });
    </script>

</body>

</html>