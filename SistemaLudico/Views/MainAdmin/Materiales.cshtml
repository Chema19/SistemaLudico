@model SistemaLudico.ViewModels.MainAdmin.TemaViewModel
@{
    ViewBag.Title = "Materiales";
}
<h2>Materiales de curso</h2>

<div class="row">
    <div class="col-lg-12">
        <div class="card-box">
            <form>
                <div class="form-group">
                    <label>Filtro por nombre</label>
                    <input class="form-control" placeholder="Buscar" />
                    <br />
                    <button class="btn btn-danger">Buscar</button>
                </div>
            </form>
        </div>
    </div>


    <div class="col-lg-12">
        <div class="card-box">
            <button class="btn btn-primary">Agregar</button>
        <hr />
            <div class="table-responsive">
                <table class="table mb-0">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Nombre del curso</th>
                            <th>Tema de curso</th>
                            <th>Fecha</th>
                            <th>Archivo word</th>
                            <th>Archivo PDF</th>
                            <th>Archivo Audio</th>
                            <th>Archivo PPT</th>
                            <th>Opciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.LstTema)
                        {
                        <tr>
                            <th scope="row">1</th>
                            <td>@item.Curso.Nombre</td>
                            <td>@item.Nombre</td>
                            <td>@item.FechaCreación</td>
                            <td>-</td>
                            <td>-</td>
                            <td>-</td>
                            <td>-</td>
                            <td>
                                <a class="btn" href="@Url.Action("EditarMaterial","MainAdmin", new { TemaId = item.TemaId })"><i class="fa fa-edit" style="color:blue"></i></a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div> <!-- end card-box -->
    </div> <!-- end col -->
</div>     