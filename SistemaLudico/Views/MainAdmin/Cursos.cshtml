@model SistemaLudico.ViewModels.MainAdmin.CursoViewModel
@{
    ViewBag.Title = "Cursos";
}

<h2>Curso de material</h2>



<div class="row">

    <div class="col-lg-12">
        <div class="card-box">
            <form>
                <div class="form-group">
                    <label>Filtro por nombre</label>
                   <input class="form-control" placeholder="Buscar"/>
                    <br />
                    <button class="btn btn-danger">Buscar</button>
                </div>
            </form>
        </div>
    </div>
    

    <div class="col-lg-12">
        <div class="card-box">
                @*<button class="btn btn-primary">Agregar</button>*@
                <hr />
            <div class="table-responsive">
                <table class="table mb-0">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Nomrbe del curso</th>
                            <th>Archivo word</th>
                            <th>Archivo PDF</th>
                            <th>Fecha de creación</th>
                            <th>Opciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.LstCurso) {
                        <tr>
                            <th scope="row">1</th>
                            <td>@item.Nombre</td>
                            <td>-</td>
                            <td>-</td>
                            <td>@item.FechaCreacion.Date</td>
                            <td>
                                <a class="btn" href="@Url.Action("EditarCurso","MainAdmin", new { CursoId = item.CursoId })"><i class="fa fa-edit" style="color:blue"></i></a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div> <!-- end card-box -->
    </div> <!-- end col -->
</div>
