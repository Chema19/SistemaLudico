@model SistemaLudico.ViewModels.MainAdmin.EjercicioViewModel
@{
    ViewBag.Title = "EditarEjercicio";
}

<div class="row">
    <div class="col-lg-12">

        <h3 class=""><i class="fa fa-edit"></i> Editar Ejercicio</h3>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <form class="needs-validation" action="@Url.Action("EditarEjercicio","MainAdmin")" method="post" enctype="multipart/form-data">
                    @Html.HiddenFor(x => x.EjercicioId)
                    <div class="row">
                        <div class="form-group mb-3 col-lg-12">
                            <label>Valor 1</label>
                            @Html.TextBoxFor(x => x.Valos1, new { @class = "form-control" })
                        </div>
                        <div class="form-group mb-3 col-lg-12">
                            <label>Valor 1</label>
                            @Html.TextBoxFor(x => x.Valor2, new { @class = "form-control" })
                        </div>
                        <div class="form-group mb-3 col-lg-12">
                            <label>Valor 1</label>
                            @Html.TextBoxFor(x => x.Resultado, new { @class = "form-control" })
                        </div>
                        <div class="form-group mb-3 col-lg-12">
                            <label>Archivo Imagen del problema</label>
                            @Html.TextBoxFor(x => x.RutaImage, new { @class = "form-control dropify", @type = "file" })
                        </div>
                    </div>
                    <button class="btn btn-primary" type="submit">Guardar</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $(".dropify").dropify({ messages: { default: "Drag and drop a file here or click", replace: "Drag and drop or click to replace", remove: "Eliminar", error: "Ooops, something wrong appended." }, error: { fileSize: "The file size is too big (1M max)." } });
    </script>
}
