@model SistemaLudico.ViewModels.MainAdmin.TemaViewModel
@{
    ViewBag.Title = "EditarMaterial";
}


<div class="row">
    <div class="col-lg-12">

        <h3 class=""><i class="fa fa-edit"></i> Editar Curso</h3>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <form class="needs-validation" action="@Url.Action("EditarMaterial","MainAdmin")" method="post" enctype="multipart/form-data">
                    @Html.HiddenFor(x => x.TemaId)
                    <div class="row">
                        <div class="form-group mb-3 col-lg-12">
                            <label>Nombre</label>
                            @Html.TextBoxFor(x => x.Nombre, new { @class = "form-control" })
                        </div>
                        <div class="form-group mb-3 col-lg-4">
                            <label>Archivo PDF</label>
                            @Html.TextBoxFor(x => x.RutaPDF, new { @class = "form-control dropify", @type = "file" })
                        </div>
                        <div class="form-group mb-3 col-lg-4">
                            <label>Archivo Audio</label>
                            @Html.TextBoxFor(x => x.RutaAudio, new { @class = "form-control dropify", @type = "file" })
                        </div>
                        <div class="form-group mb-3 col-lg-4">
                            <label>Archivo Word</label>
                            @Html.TextBoxFor(x => x.RutaWord, new { @class = "form-control dropify", @type = "file" })
                        </div>
                    </div>
                    <button class="btn btn-primary" type="submit">Guardar</button>
                </form>

            </div> <!-- end card-body-->
        </div> <!-- end card-->
    </div> <!-- end col-->
</div>

@section scripts{
    <script>
        $(".dropify").dropify({ messages: { default: "Drag and drop a file here or click", replace: "Drag and drop or click to replace", remove: "Eliminar", error: "Ooops, something wrong appended." }, error: { fileSize: "The file size is too big (1M max)." } });
    </script>
}
